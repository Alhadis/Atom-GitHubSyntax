@import "./includes/scope-map.less";

/* Manually-selected light mode */
html[data-colour-mode="light"]{
	&:not([data-github-theme]),
	&[data-github-theme=""]{
		%light%
	}
	&[data-github-theme="high-contrast"]{
		%lightHighContrast%
	}
	&[data-github-theme="colour-blind"]{
		%lightColourBlind%
	}
	&[data-github-theme="tritanopia"]{
		%lightTritanopia%
	}
}

/* Manually-selected dark mode */
html[data-colour-mode="dark"]{
	&:not([data-github-theme]),
	&[data-github-theme=""]{
		%dark%
	}
	&[data-github-theme="high-contrast"]{
		%darkHighContrast%
	}
	&[data-github-theme="colour-blind"]{
		%darkColourBlind%
	}
	&[data-github-theme="tritanopia"]{
		%darkTritanopia%
	}
	&[data-github-theme="dimmed"]{
		%darkDimmed%
	}
}

/* System-synced light mode */
@media not all and (prefers-color-scheme: dark){
	html[data-colour-mode=""],
	html:not([data-colour-mode]){
		&:not([data-github-theme]),
		&[data-github-theme=""]{
			%light%
		}
		&[data-github-theme="high-contrast"]{
			%lightHighContrast%
		}
		&[data-github-theme="colour-blind"]{
			%lightColourBlind%
		}
		&[data-github-theme="tritanopia"]{
			%lightTritanopia%
		}
	}
}

/* System-synced dark mode */
@media (prefers-color-scheme: dark){
	html[data-colour-mode=""],
	html:not([data-colour-mode]){
		&:not([data-github-theme]),
		&[data-github-theme=""]{
			%dark%
		}
		&[data-github-theme="high-contrast"]{
			%darkHighContrast%
		}
		&[data-github-theme="colour-blind"]{
			%darkColourBlind%
		}
		&[data-github-theme="tritanopia"]{
			%darkTritanopia%
		}
		&[data-github-theme="dimmed"]{
			%darkDimmed%
		}
	}
}
